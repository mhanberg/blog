#! /usr/bin/env bash

set -e

echo "==> pwd"
pwd

echo "==> ls"
ls

echo "==> ls /opt/build/cache/bundle/ruby"
ls /opt/build/cache/bundle/ruby

echo "==> command -v jekyll"
command -v jeykyll

if [ -f bin/generate-bookshelf ]; then
  echo "==> gem list"
  gem list

  echo "==> bundle list"
  bundle list

  bin/generate-bookshelf
fi

bundle exec jekyll build
