source 'https://rubygems.org'
ruby RUBY_VERSION

gem 'jekyll'
gem 'jekyll-feed'
gem 'jekyll-sitemap'
gem 'jekyll-seo-tag'
gem 'jekyll-purgecss'
gem 'jekyll-postcss', path: "../jekyll-postcss"

gem 'goodreads'
gem 'activesupport'

group :development do
  gem "dotenv"
end

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem 'tzinfo-data', platforms: %i[mingw mswin x64_mingw jruby]
